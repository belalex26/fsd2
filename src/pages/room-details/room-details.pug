head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='../fonts/montserrat-regular.woff' as='font')
    link(href='../fonts/material-icons-regular.woff' as='font')
    link(rel='stylesheet', href='../css/main.css')
    title Room details

    include ../../blocks/header/header
    include ../../blocks/image-gallery/image-gallery
    include ../../blocks/comment/comment
    include ../../blocks/chart/chart
    include ../../blocks/booking-card/booking-card
    include ../../blocks/conveniences/conveniences
    include ../../blocks/bullet-list/bullet-list
    include ../../blocks/footer/footer

- var data = {"title": "Меню", "items": [{"title": "О нас"}, {"title": "Услуги", "sublevel": true, "items": [{"title": "Проживание"}, {"title": "Трансфер"}] }, {"title": "Вакансии"}, {"title": "Новости"}, {"title": "Соглашения", "sublevel": true, "items": [{"title": "Офера"}, {"title": "Соглашение о конфиденциальности"}]} ]}

body.room-details

    header.room-details__header
        +header({data})
    main.room-details__main
        section.room-details__photo
            +image-gallery()
        section.room-details__detail
            h2.room-details__detail-title Сведения о номере
            +conveniences({
                image: "comfort.svg",
                title: "Комфорт",
                desc: "Шумопоглощающие стены",
            })
            +conveniences({
                image: "conveniences.svg",
                title: "Удобство",
                desc: "Окно в каждой из спален",
            })
            +conveniences({
                image: "cosiness.svg",
                title: "Уют",
                desc: "Номер оснащен камином",
            })

        section.room-details__chart
            +chart({
                number: "260",
                label: "голосов",
                title: "Впечатления от номера",
                option: [
                    {
                        style: "yellou",
                        text: "великолепно"
                    },
                    {
                        style: "yellou",
                        text: "великолепно"
                    },
                    {
                        style: "yellou",
                        text: "великолепно"
                    },
                    {
                        style: "yellou",
                        text: "великолепно"
                    }
                ]

            })
        
        section.room-details__comment
            .room-details__comment-wrapper
                h2.room-details__comment-title Сведения о номере
                p.room-details__comment-total 2 отзыва
            +comment({
                image: "man.png",
                author: "Мурад Сарафанов",
                date: "5 дней назад",
                text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
                like: {
                    liked: true,
                    likes: 12
                }
            })

            +comment({
                image: "man.png",
                author: "Патрисия Стёклышкова",
                date: "Неделю назад",
                text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент",
                like: {
                    likes: 2
                }
            })

        section.room-details__rules
            h2.room-details__rules-title Правила
            +bullet-list([
              'Нельзя с питомцами',
              'Без вечеринок и мероприятий',
              'Время прибытия — после 13:00, а выезд до 12:00'
            ])
        
        section.room-details__cancellation
            h2.room-details__cancellation-title Правила
            p.room-details__cancellation-text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги. 

        .room-details__booking-card
          +booking-card()


    footer.room-details__footer
        +footer({
            main: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»",
            navigation: [
            {
                title: "Навигация",
                links: [
                { url: "/mock-address", text: "О нас" },
                { url: "/mock-address", text: "Новости" },
                { url: "/mock-address", text: "Служба поддержки" },
                { url: "/mock-address", text: "Услуги" },
                ]
            },
            {
                title: "О нас",
                links: [
                { url: "/mock-address", text: "О сервисе" },
                { url: "/mock-address", text: "Наша команда" },
                { url: "/mock-address", text: "Вакансии" },
                { url: "/mock-address", text: "Инвесторы" },
                ]
            },
            {
                title: "Служба поддержки",
                links: [
                { url: "/mock-address", text: "Соглашения" },
                { url: "/mock-address", text: "Сообщества" },
                { url: "/mock-address", text: "Связь с нами" },
                ]
            },
            ],
            subscription: {
            title: "Подписка",
            text: "Получайте специальные предложения и новости сервиса",
            },
            copy: "Copyright © 2018 Toxin отель. Все права защищены.",
        })