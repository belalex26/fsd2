head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(href='../fonts/montserrat-regular.woff' as='font')
  link(href='../fonts/material-icons-regular.woff' as='font')
  link(rel='stylesheet', href='../css/main.css')
  title Form Elements FSD2

  include ../../blocks/kit-logo/kit-logo
  include ../../blocks/dropdown-field/dropdown-field
  include ../../blocks/range-slider/range-slider
  include ../../blocks/range-dates/range-dates
  include ../../blocks/text-field/text-field
  include ../../blocks/button/button
  include ../../blocks/bullet-list/bullet-list
  include ../../blocks/rich-checkbox-buttons/rich-checkbox-buttons
  include ../../blocks/expandable-checkbox/expandable-checkbox
  include ../../blocks/checkbox-button/checkbox-button
  include ../../blocks/radio-button/radio-button
  include ../../blocks/toggle-button/toggle-button
  include ../../blocks/like-button/like-button
  include ../../blocks/rating/rating
  include ../../blocks/comment/comment
  include ../../blocks/pagination/pagination
  include ../../blocks/filter-date/filter-date
  include ../../blocks/dropdown-guests/dropdown-guests
  include ../../blocks/dropdown-room/dropdown-room
  include ../../blocks/conveniences/conveniences

  body.form-elements
    header.form-elements__header
      .form-elements__logo
        +kit-logo()

    main.form-elements__main
      .form-elements__container
        .form-elements__container-left-top

          .form-elements__item
            .form-elements__head
              .form-elements__title Text field
              .form-elements__desc Default
            +text-field({type: "email", placeholder: "Email"})

          .form-elements__item
            .form-elements__head
              .form-elements__title Text field
              .form-elements__desc Hover/Focus
            +text-field({style: "focused", type: "email", placeholder: "This is pretty awesome"})

          .form-elements__item.form-elements__dropdown
            .form-elements__head
              .form-elements__title Dropdown
            +dropdown-field({placeholder: "Сколько гостей"})

          .form-elements__item
            .form-elements__head
              .form-elements__title Masked text field
            +text-field({type: "data", placeholder: "ДД.ММ.ГГГГ"})

          .form-elements__item
            +range-dates({
              titleIn: "date dropdown",
              titleOut: "date dropdown"
            })

          .form-elements__item
            .form-elements__head
              .form-elements__title Filter date dropdown
            +filter-date()
          
          .form-elements__item
            .form-elements__head
              .form-elements__title Subscription text field 
            +text-field({style: "subscripton", type: "email", placeholder: "Email"})

        .form-elements__container-left-bot

          .form-elements__item
            .form-elements__head
              .form-elements__title Dropdown
              .form-elements__desc Default
            +dropdown-room({
              placeholder: "2 спальни, 2 кровати",
              value: "2 спальни, 2 кровати",
              option:
              [
                  {
                      name: 'спальни',
                      value: '2', 
                  },
                  {
                      name: 'кровати',
                      value: 2,
                  },
                  {
                      name: 'ванные комнаты',
                      value: 0, 
                  } 
              ]     
            })

          .form-elements__item.form-elements__dropdown-room
            .form-elements__head
              .form-elements__title Dropdown
              .form-elements__desc Expanded
            +dropdown-room({
              placeholder: "2 спальни, 2 кровати",
              value: "2 спальни, 2 кровати",
              option:
              [
                  {
                      name: 'спальни',
                      value: '2', 
                  },
                  {
                      name: 'кровати',
                      value: 2,
                  },
                  {
                      name: 'ванные комнаты',
                      value: 0, 
                  } 
              ]     
            })
    
          .form-elements__item
            +expandable-checkbox({
              title: 'expandable checkbox list',
              option: [
                {
                    name: 'rules',
                    value: 'breakfast', 
                    content: 'Завтрак'
                },
                {
                    name: 'rules',
                    value: 'desk', 
                    checked: 'true',
                    content: 'Письменный стол'
                },
                {
                    name: 'rules',
                    value: 'feeding chair', 
                    checked: 'true',
                    content: 'Стул для кормления'
                },
                {
                    name: 'rules',
                    value: 'bed', 
                    checked: 'true',
                    content: 'Кроватка'
                },
                {
                    name: 'rules',
                    value: 'TV', 
                    content: 'Телевизор'
                },
                {
                    name: 'rules',
                    value: 'shampoo', 
                    content: 'Шампунь'
                },
                
              ]     
            })

        .form-elements__container-mid-top
          .form-elements__item.form-elements__checkbox-button
            .form-elements__head
                .form-elements__title Checkbox Buttons
            +checkbox-button(
              [
                {
                    name: 'optionally',
                    value: 'smoke', 
                    content: 'Можно курить'
                },
                {
                    name: 'optionally',
                    value: 'pets', 
                    checked: 'true',
                    content: 'Можно с питомцами'
                },
                {
                    name: 'optionally',
                    value: 'guests', 
                    checked: 'true',
                    content: 'Можно пригласить гостей (до 10 человек)'
                }
                
              ]     
            )
          
          .form-elements__item.form-elements__radio-button
            .form-elements__head.form-elements__radio-button-head
              .form-elements__title Radio Buttons
            +radio-button('gender', 'man', 'Мужчина', true)
            +radio-button('gender', 'woman', 'Женщина', false)

          .form-elements__item.form-elements__toggle
            .form-elements__head
                .form-elements__title Toggle
            +toggle-button('Получать спецпредложения', true)
            +toggle-button('Получать спецпредложения')

          .form-elements__item.form-elements__like-button
            .form-elements__head
              .form-elements__title Like button
            .form-elements__like-button-content
              +like({
                likes: 2,
                liked: false
              })

              +like({
                likes: 12,
                liked: true
              })

          .form-elements__item.form-elements__rate-button
            .form-elements__head
              .form-elements__title Rate button
            .form-elements__rate-button-content
              +rating(4, true)
              +rating(5, true)

        .form-elements__container-mid-bot

          .form-elements__item.form-elements__dropdown-guest
            .form-elements__head
              .form-elements__title Dropdown
            .form-elements__dropdown-guest-content
              +dropdown-guests({
                placeholder: "Сколько гостей",
                option: [
                  {
                      name: 'взрослые',
                      value: 2, 
                  },
                  {
                      name: 'дети',
                      value: 2,
                  },
                  {
                      name: 'младенцы',
                      value: 0, 
                  }
                ]
              })
          
          .form-elements__item
            .form-elements__head
              .form-elements__title Rich checkbox buttons
            +rich-checkbox([
                {
                    name: 'opt',
                    header: 'Широкий коридор', 
                    content: 'Ширина коридоров в номере не менее 91 см.'
                },
                {
                    name: 'opt',
                    header: 'Помощник для инвалидов' , 
                    content: 'На 1 этаже вас встретит специалист  и проводит до номера.'
                },
            ])

        .form-elements__container-right-top

          .form-elements__item
            +slider({
              title: "Range slider",
              range: "5 000₽ - 10 000₽"  
            })

          .form-elements__item
            .form-elements__head
              .form-elements__title Buttons
            .form-elements__buttons
              +button('fill', 'click me', '#')
              +button('fill-hover', 'click me', '#')
            
              +button('border', 'click me', '#')
              +button('border-hover', 'click me', '#')
          
            .form-elements__buttons-no-border
              +button('not-border-purple', 'click me', '#')
              +button('not-border-grey', 'click me', '#')

            .form-elements__buttons-long
              +button('long', 'перейти к оплате', '#')

          .form-elements__item
            .form-elements__head
              .form-elements__title Pagination
            +pagination({ 
              text: "1 &ndash; 12 из 100+ вариантов аренды",
              items: [
                { link: "/mock-address", text: "1", active: true },
                { link: "/mock-address", text: "2" },
                { link: "/mock-address", text: "3" },
                { text: "..." },
                { link: "/mock-address", text: "15" },
              ]
            })

        .form-elements__container-right-bot
          .form-elements__item
              .form-elements__head
                .form-elements__title Dropdown
              +dropdown-guests({
                placeholder: "Сколько гостей",
                value: "3 гостя",
                option: [
                  {
                      name: 'взрослые',
                      value: 2, 
                  },
                  {
                      name: 'дети',
                      value: 2,
                  },
                  {
                      name: 'младенцы',
                      value: 0, 
                  }
                ]
              })  

          .form-elements__item
            .form-elements__head
              .form-elements__title Bullet list
            +bullet-list([
              'Нельзя с питомцами',
              'Без вечеринок и мероприятий',
              'Время прибытия — после 13:00, а выезд до 12:00'
            ])
        
        .form-elements__container-bot

          .form-elements__item
            +conveniences({
            image: "comfort.svg",
            title: "Комфорт",
            desc: "Шумопоглощающие стены",
            })
            +conveniences({
              image: "conveniences.svg",
              title: "Удобство",
              desc: "Окно в каждой из спален",
            })
        
          .form-elements__item.form-elements__comment
            +comment({
              image: "man.png",
              author: "Мурад Сарафанов",
              date: "5 дней назад",
              text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
              like: {
                liked: true,
                likes: 12
              }
            })   