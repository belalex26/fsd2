mixin dropdown-room({placeholder, value, option})
    .dropdown-room
        .dropdown-room__triger
            label.dropdown-room__title
                input.dropdown-room__input(type="text" placeholder=placeholder value=value)
        .dropdown-room__content
            ul.dropdown-room__list
                each item in option
                    li.dropdown-room__item
                        p.dropdown-room__text=item.name
                        .dropdown-room__control
                            button.dropdown-room__btn.dropdown-room__btn--minus(data-direction='minus' aria-label='минус') &#8722;
                            input.dropdown-room__counter(type=number value=item.value)
                            button.dropdown-room__btn.dropdown-room__btn--plus(data-direction='plus' aria-label='плюс') &#43;


        

